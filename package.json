{
    "name": "telegram-whatsapp-forwarder",
    "version": "1.0.0",
    "description": "Sistema per inoltrare messaggi da Telegram a WhatsApp",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "dev": "nodemon index.js",
        "pm2:start": "pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 stop telegram-whatsapp-forwarder",
        "pm2:restart": "pm2 restart telegram-whatsapp-forwarder",
        "pm2:logs": "pm2 logs telegram-whatsapp-forwarder",
        "pm2:monit": "pm2 monit",
        "pm2:delete": "pm2 delete telegram-whatsapp-forwarder",
        "system:start": "sudo systemctl start telegram-whatsapp.service",
        "system:stop": "sudo systemctl stop telegram-whatsapp.service",
        "system:status": "sudo systemctl status telegram-whatsapp.service",
        "system:logs": "journalctl -u telegram-whatsapp -f",
        "nohup:start": "nohup node index.js > logs/output.log 2>&1 & echo $! > app.pid",
        "nohup:stop": "kill $(cat app.pid) && rm app.pid",
        "logs": "tail -f logs/output.log",
        "postinstall": "echo 'Skipping Chromium download'"
    },
    "dependencies": {
        "whatsapp-web.js": "^1.32.0",
        "telegraf": "^4.16.3",
        "puppeteer": "^24.17.0",
        "express": "^5.1.0",
        "qrcode": "^1.5.4",
        "qrcode-terminal": "^0.12.0",
        "fs-extra": "^11.3.1",
        "dotenv": "^17.2.1"
    },
    "devDependencies": {
        "nodemon": "^3.1.10"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "whatsapp",
        "telegram",
        "bot",
        "forwarder"
    ]
}
